{
  "version": "0.1.0",
  "command": "node",
  "args": ["workflow/TypeScript.js"],
  "isShellCommand": true,
  "isBackground": true,
  "problemMatcher": {
    "owner": "typescript",
    "fileLocation": "relative",
    "pattern": {
      "regexp": "^([^\\s].*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
      "file": 1,
      "location": 2,
      "severity": 3,
      "code": 4,
      "message": 5
    },
    "background": {
      "activeOnStart": true,
      "beginsPattern": "^Changes detected, recompiling",
      "endsPattern": "^Waiting for changes"
    }
  }
}
