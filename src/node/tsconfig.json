{
  "extends": "../../configs/typescript/base.json",
  "compilerOptions": {
    "noEmit": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "importHelpers": true
  },
  "include": [
    "./**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "./build",
    "./*/build",
    "./node_modules",
    "./*/node_modules",
    "../shared/node_modules",
    "../shared/*/node_modules"
  ]
}
